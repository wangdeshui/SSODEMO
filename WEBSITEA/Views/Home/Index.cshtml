@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>title</title>
        <script src="~/Scripts/jquery-1.9.1.js"></script>
    </head>
    <body>
        <div>
            <input type="button" value="TEST WITH JSON" id="TESTWITHJSON"/>
            
            <input type="button" value="TEST WITH JSONP" id="TESTWITHJSONP"/>
        </div>

        <div>
            <script type="text/javascript">
                $(function () {
                    


                    $("#TESTWITHJSON").click(function () {
                        $.ajax({
                            type: "GET",
                            url: "http://www.login.com",
                            success: function (result) {
                                alert(result);
                            }
                        });
                    });


                    $("#TESTWITHJSONP").click(function () {
                        $.ajax({
                            type: "GET",
                            //url: "http://www.login.com/Login/LoginWithJsonp?callBack",
                            url: "http://www.login.com/Login/Test",
                            cache: false,
                            error: function (ex) {
                                alert(ex.message);
                                alert("程序出错,请联系管理员.");
                            },
                            dataType: "jsonp",
                            jsonp: 'callback',
                            success: function (result) {
                                alert(result);
                            }
                        });
                    });

                });
            </script>
        </div>
    </body>
</html>